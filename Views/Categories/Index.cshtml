@model IEnumerable<Compramas.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Categories</h1>

@if(User.Identity.IsAuthenticated)
{
    <p>
        <a class="btn btn-warning" asp-action="Create">Create New</a>
    </p>
}
<div class="table-responsive">
    <table class="table table-striped table-hover sortable">
        <thead>
            <tr>
                <th>
                    <a href="#">@Html.DisplayNameFor(model => model.Name)</a>
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <td>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>