
@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Payment</h1>

<h2>Pedido Total @String.Format("{0:c}", ViewBag.Total)</h2>

<form method="post">
    <script src="https://checkout.stripe.com/checkout.js"
            class="stripe-button"
            data-amout="@ViewBag.CentsTotal"
            data-name="Compramas"
            data-currency="cad"
            data-key="@ViewBag.PublishableKey">

    </script>
</form>

