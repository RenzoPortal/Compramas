@model IEnumerable<Compramas.Models.Category>

@{
    ViewData["Title"] = "Browse Our Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center" style="width: 100%;">
    <div class="mb-3 py-3">
        <h1 class="display-3"style="color: #8C3623;">Categorias de productos</h1>
    </div>
</div>

<h2 class="text-black">Navega por nuestra tienda</h2>
<br />
<section> 
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <a asp-controller="Shop" asp-action="Browse" asp-route-category="@item.Name">
                     <div class="card mb-3 text-center h-90">
                         <div class="card-body bg-info">
                             <p style="font-size: 18px;" class="text-center text-white">@item.Name</p>
                         </div>
                     </div>
                </a>
            </div>
        }
    </div>
</section>




