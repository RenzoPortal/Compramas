@{
    ViewData["Title"] = "Contact";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-5 my-4 mx-auto">
            <img src="~/img/Contact/cantacto_img.jpg" class="img-fluid" alt="">
        </div>

        <div class=" col-md-6 my-4 mx-auto">

            <div class="border border-dark p-4 rounded-3 mb-4">
                <h1 class="text-primary">CONTACTANOS</h1>
                <br>
                <p class="lh-sm font-monospace">Siguenos en nuestras redes sociales o suscribete con tu correo para mantenerte al tanto de las novedades de Compramas</p>
                <div class="text-center m-2">
                    <img src="~/img/Contact/icon_fb.png" class="mx-3" width="50" alt="">
                    <img src="~/img/Contact/icon_insta.png" class="mx-3" width="50" alt="">
                    <img src="~/img/Contact/icon_twi.png" class="mx-3" width="50" alt="">
                </div>
                <br>
            </div>
            <form class="row g-3">
                <div class="col-md-6">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="inputPassword4" class="form-label">Apellido</label>
                    <input type="text" class="form-control" required>
                </div>
                <div class="col-12">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="inputAddress" placeholder="example@example.com">
                </div>
                <div class="col-12">
                    <label for="inputEmail" class="form-label">Comentarios</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label fw-lighter" for="gridCheck">
                            Deseo que me lleguen noticias y promociones a mi correo electronico
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-warning">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>

